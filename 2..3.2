#include <iostream>
using namespace std;
int main(void) {
double pi4 = 0.;
long n;
cout << "Number of iterations? ";
cin >> n;
 int p=1;
 int l=1;
 double k=1./p;
for(int i=0;i<n;i++){
    pi4=pi4+k;
    p=p+2;
    l=l*(-1);
    k=l*(1./p);
   
}
cout.precision(20);
cout << "Pi = " << (pi4*4)<<endl;
return 0;
}
